<odoo>

    <record id="teacher_tree_view" model="ir.ui.view">
        <field name="name">Teacher tree</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="salary" optional="1"/>
                <field name="employee" optional="1"/>
                <field name="description" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="teacher_form_view" model="ir.ui.view">
        <field name="name">Teacher form</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="employee"/>
                            <field name="salary" invisible="employee == 0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="teacher_search_view" model="ir.ui.view">
        <field name="name">Teacher search</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="salary"/>
                <field name="employee"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">teacher</field>
    </record>

    <menuitem
            id="teacher_item"
            name="Teacher"
            parent="in_our_school_menu"
            action="teacher_action"
    />

</odoo>